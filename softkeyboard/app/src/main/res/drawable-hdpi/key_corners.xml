<?xml version="1.0" encoding="utf-8"?>
      
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#98C9F5" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
           <padding
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp" 
               />

            <corners android:radius="0dp" /> 

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#F7F7F7"
                android:centerColor="#F2F2F2"
                android:endColor="#E3E3E3"
                android:angle="270" />
             <stroke
                android:width="2dp"
                android:color="@android:color/transparent" />

            
            <padding
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp" 
               />

            <corners android:radius="4dp" /> 
            

        </shape> 

    </item>
</selector>